package removeDuplicateFromSortedArrayI;

public class TwoPointer {
	public static int removeDuplicates(int[] A) {
		if (A == null || A.length == 0) {
			return 0;
		}
		if (A.length == 1) {
			return 1;
		}
		int slow = 0;
		int fast = 1;
		int size = 1;
		while (fast < A.length) {
			if (A[fast] != A[slow]) {
				slow++;
				A[slow] = A[fast];
				size++;
				fast++;
			} else {
				fast++;
			}
		}
		return size;
	}

	public static void main(String[] args) {
		int[] A = { 1, 1, 2 };
		System.out.println(removeDuplicates(A));
	}
}
