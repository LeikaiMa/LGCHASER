package subSets;

import java.util.ArrayList;
import java.util.Arrays;

public class AddSequentially {
	public ArrayList<ArrayList<Integer>> subsets(int[] S) {
        ArrayList<ArrayList<Integer>> results = new ArrayList<ArrayList<Integer>>();
        ArrayList<Integer> result = new ArrayList<Integer>();
        results.add(new ArrayList(result));
        
        Arrays.sort(S);
        subSetsHelper(results, result, S, 0);
        
        return results;
    }
    
    public void subSetsHelper(ArrayList<ArrayList<Integer>> results, ArrayList<Integer> result, int[] S, int index) {
        if (index == S.length) {
            return;
        } else {
            for (int i = index; i < S.length; i++) {
                result.add(S[i]);
                results.add(new ArrayList<Integer>(result));
                subSetsHelper(results, result, S, index + 1);
                result.remove(result.size() - 1);
            }
        }
    }
}
