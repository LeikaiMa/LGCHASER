package surroundedRegions;

import java.util.LinkedList;
import java.util.Queue;

public class BFS {
	public static void solve(char[][] board) {
		if (board == null) {
			return;
		}
		int row = board.length;
		if (row == 0) {
			return;
		}
		int column = board[0].length;
		if (row == 0 && column == 0) {
			return;
		}
		Queue<Integer> r = new LinkedList<Integer>();
		Queue<Integer> c = new LinkedList<Integer>();
		for (int i = 0; i < column; i++) {
			if (board[0][i] == 'O') {
				board[0][i] = 'Y';
				r.add(0);
				c.add(i);
			}
			if (board[row - 1][i] == 'O') {
				board[row - 1][i] = 'Y';
				r.add(row - 1);
				c.add(i);
			}
		}

		for (int i = 0; i < row; i++) {
			if (board[i][0] == 'O') {
				board[i][0] = 'Y';
				r.add(i);
				c.add(0);
			}
			if (board[i][column - 1] == 'O') {
				board[i][column - 1] = 'Y';
				r.add(i);
				c.add(column - 1);
			}
		}
		
		while (!r.isEmpty()) {
			int tr = r.poll();
			int tc = c.poll();
			if ((tr - 1) >= 0 && board[tr - 1][tc] == 'O') {
				board[tr-1][tc] = 'Y';
				r.add(tr-1);
				c.add(tc);
			}
			if ((tr + 1) < row && board[tr + 1][tc] == 'O') {
				board[tr+1][tc] = 'Y';
				r.add(tr+1);
				c.add(tc);
			}

			if ((tc - 1) >= 0 && board[tr][tc - 1] == 'O') {
				board[tr][tc - 1] = 'Y';
				r.add(tr);
				c.add(tc - 1);
			}
			if ((tc + 1) < column && board[tr][tc + 1] == 'O') {
				board[tr][tc + 1] = 'Y';
				r.add(tr);
				c.add(tc + 1);
			}
		}
		
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < column; j++) {
				if (board[i][j] == 'O') {
					board[i][j] = 'X';
				} else if (board[i][j] == 'Y') {
					board[i][j] = 'O';
				}
				
			}
		}
	}
}
