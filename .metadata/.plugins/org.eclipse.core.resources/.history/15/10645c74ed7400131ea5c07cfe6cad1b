package nextPermutation;

import java.util.Arrays;

public class FromWiki {
	public static void nextPermutation(int[] num) {
		int k = -1;
		int l = 0;
		for (int i = 0; i < num.length - 1; i++) {
			if (num[i] < num[i+1]) {
				k = i;
			}
		}
		
		if (k == -1) {
			Arrays.sort(num);
			return;
		}
		
		for (int i = 0; i < num.length; i++) {
			if (num[i] > num[k]) {
				l = i;
			}
		}
		int tmp = num[l];
		num[l] = num[k];
		num[k] = tmp;
		
		
	}
}
