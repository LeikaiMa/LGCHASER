package nextPermutation;

import java.util.Arrays;

public class InPlace {
	public void nextPermutation(int[] num) {
		if (num == null || num.length == 0 || num.length == 1) {
			return;
		}

		for (int i = num.length - 1; i > 0; i--) {
			for (int j = i - 1; j >= 0; j--) {
				if (num[j] < num[i]) {
					int tmp = num[i];
					for (int k = i; k > j; k--) {
						num[k] = num[k-1];
					}
				}
			}
		}
		
		Arrays.sort(num);
	}
}
