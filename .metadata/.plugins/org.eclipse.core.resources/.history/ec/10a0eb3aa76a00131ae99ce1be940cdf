package twoSum;

import java.util.Arrays;

public class TwoSum {
	public int[] twoSum(int[] numbers, int target) {
		Arrays.sort(numbers);
		int[] result = new int[2];
		for (int i = 0, j = numbers.length - 1; i < j; ) {
			int sum = numbers[i] + numbers[j]
if (sum < target) {
	i++;
} else if(sum > target) {
	j--;
} else {
	result[0] = i;
	result[1] =j;
	break;
} 
		}
	}
}
