package btIsBST;

import checkBalancedTree.TreeNode;

public class StaticInt {
	public static int last_printed = Integer.MIN_VALUE;
	public static boolean checkBST(TreeNode n) {
		if (n == null) {
			return true;
		}
		
		if (!checkBST(n.left)) {
			return false;
		}
		
		if (n.data <= last_printed) {
			return false;
		}
		last_printed = n.data;
		
		if (!checkBST(n.right)) {
			return false;
		}
	}
}
