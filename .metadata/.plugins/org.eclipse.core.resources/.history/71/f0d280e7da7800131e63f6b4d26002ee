package addBinary;

public class BackToFrontAllORWhile {
	public String addBinary(String a, String b) {
		int la = a.length() - 1;
		int lb = b.length() - 1;
		int c = 0;
		StringBuffer sb = new StringBuffer();
		while (la >= 0 || lb >= 0 || c > 0) {
			int v = c;
			if (la >= 0) {
				v += a.charAt(la) - '0';
			}

			if (lb >= 0) {
				v += b.charAt(lb) - '0';
			}

			sb.insert(0, v % 2);
			c = v / 2;
			la--;
			lb--;
		}

		return sb.toString();
	}
}
