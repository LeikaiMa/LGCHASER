package maximumSubarray;

public class ON {
	public static int maxSubArray(int[] A) {
		if (A == null || A.length == 0) {
			return 0;
		}

		int sum = 0;
		if (A[0] > 0) {
			sum = A[0];
		}
		int max = 0;
		for (int i = 1; i < A.length; i++) {
			if (A[i] + A[i - 1] < 0) {
				max = Math.max(max, sum);
				sum = 0;
			} else {
				sum += A[i];
			}

		}
		max = Math.max(max, sum);
		return max;
	}

	public static void main(String[] args) {
		int[] A = { -2, 1, -3, 4, -1, 2, 1, -5, 4 };
	}
}
