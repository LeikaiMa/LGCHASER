package robotMovingBoard;

public class RobotMovingDownwards {
	public static int move(int x, int y) {
		if (x == 1 && y == 1) {
			return 1;
		} else if (x > 1 && y == 1) {
			return move(x - 1, y);
		} else if (x == 1 && y > 1) {
			return move(x, y - 1);
		} else {
			return move(x - 1, y) + move(x, y - 1);
		}
	}

	public static void main(String[] args) {
		int x = 2;
		int y = 2;
		System.out.println(move(x, y));
	}
}
