package validParentheses;

import java.util.Stack;

public class StackWay {
	public boolean isValid(String s) {
		if (s == null || s.length() == 0) {
			return true;
		}
		if (s.length() % 2 == 1) {
			return false;
		}
		Stack<Character> paren = new Stack<>();

		for (int i = 0; i < s.length(); i++) {
			char c = s.charAt(i);
			if (c == '{' || c == '[' || c == '(') {
				paren.push(c);
				continue;
			}
			switch (c) {
			case '}':
				if (paren.isEmpty() || paren.pop() != '{') {
					return false;
				}
				break;
			case ']' :
				if (paren.isEmpty() || paren.pop() != '[') {
					return false;
				}
			default:
				if (paren.isEmpty() || paren.pop() != '(') {
					return false;
				}
				break;
			}
		}
		if (paren.isEmpty()) {
			return true;
		} else {
			return false;
		}
	}
}
