package ticTacToe;

public class SimpleBoard {
	public Piece hasWon(Piece[][] board) {
		for (int i = 0; i < board.length; i++) {
			if (board[i][0] != Piece.Empty && board[i][0] == board[i][1]
					&& board[i][1] == board[1][2]) {
				return board[i][0];
			}

			if (board[0][i] != Piece.Empty && board[0][i] == board[1][i]
					&& board[0][i] == board[2][i]) {
				return board[0][i];
			}
		}
	}
}
