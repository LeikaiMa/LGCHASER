package validPalindrome;

public class Simper {
	 public boolean isPalindrome(String s) {
	        if (s == null) {
				return false;
			} 
			if (s.isEmpty()) {
				return true;
			}
			
			s = s.replaceAll("[^a-zA-Z0-9]", "").toLowerCase();
			int l =0;
			int h = s.length() - 1;
			while (l < h) {
				if (s.charAt(l) != s.charAt(h)) {
					return false;
				} else {
					l++;
					h--;
				}
			}
			
			return true;  
	    }
}
