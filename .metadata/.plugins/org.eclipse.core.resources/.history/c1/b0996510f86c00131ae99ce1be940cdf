package sortedArrayToBST;

public class Recursive {
	public TreeNode sortedArrayToBST(int[] num) {
		if (num == null || num.length == 0) {
			return null;
		}
		
		if (num.length == 1) {
			return new TreeNode(num[0]);
		}
		
		TreeNode root = sortedArrayToBSTHelper(num, 0, num.length - 1);
		return root;
	}
}
