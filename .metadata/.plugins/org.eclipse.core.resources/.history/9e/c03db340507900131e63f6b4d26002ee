package palindromeNumber;

public class FirstDigitLastDigit {
	public boolean isPalindrome(int x) {
		if (x < 0) {
			return false;
		}

		int div = 1;
		while (x / div >= 10) {
			div *= 10;
		}

		while (x > 0) {
			int h = x / div;
			int l = x % 10;

			if (h != l) {
				return false;
			}

			x = (x % div) / 10;
			div /= 100;
		}

		return true;
	}
}
