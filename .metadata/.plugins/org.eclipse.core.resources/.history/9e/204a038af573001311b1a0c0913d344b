package interleavingString;

public class DP {
	public static boolean isInterleave(String s1, String s2, String s3) {
		if (s1.isEmpty()) {
			return s3.equals(s2);
		}
		if (s2.isEmpty()) {
			return s3.equals(s1);
		}
		int l1 = s1.length();
		int l2 = s2.length();
		int l3 = s3.length();
		if (l3 != l1 + l2) {
			return false;
		}

		boolean[][] dp = new boolean[l1 + 1][l2 + 1];
		dp[0][0] = true;
		for (int i = 0; i < l1; i++) {
			dp[i + 1][0] = (s1.charAt(i) == s3.charAt(i));
		}
		
		for (int i = 0; i < l2; i++) {
			dp[0][i+1] = (s2.charAt(i) == s3.charAt(i));
		}
	}
}
