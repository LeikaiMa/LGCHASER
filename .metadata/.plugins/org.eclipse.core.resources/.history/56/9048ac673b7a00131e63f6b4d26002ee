package singleNumberII;

public class Mod3 {
	public int singleNumber(int[] A) {
        int[] bits = new int[32];
        
        for (int i = 0; i < 32; i++) {
            for (int j = 0; j < A.length; j++) {
                if (((A[j] >> i) & 1) == 1) {
                    bits[i]++;
                }
                
                bits[i] = bits[i] % 3;
            }
        }
        
        int result = 0;
        for (int i = 31; i >= 0; i--) {
            result = (result << 1) + bits[i];
        }
        
        return result;
    }
}
