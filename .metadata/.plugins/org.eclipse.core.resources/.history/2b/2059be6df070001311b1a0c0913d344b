package removeDuplicateFromSortedArrayI;

public class TwoPointer {
	public int removeDuplicates(int[] A) {
		if (A == null || A.length == 0 || A.length == 1) {
			return 0;
		}
		int slow = 0;
		int fast = 1;
		int size = 1;
		while (fast < A.length) {
			if (A[fast] != A[slow]) {
				slow++;
				A[slow] = A[fast];
				size++;
				fast++;
			} else {
				fast++;
			}
		}
		return size;

	}
}
