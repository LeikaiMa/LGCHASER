package longestConsecutiveSequence;

import java.util.HashMap;

public class HashMapWithIndex {
	public static int longestConsecutive(int[] num) {
		if (num == null) {
			return 0;
		}

		HashMap<Integer, Integer> visited = new HashMap<Integer, Integer>();
		int max = 1;
		for (int i : num) {
			if (visited.containsKey(i)) {
				continue;
			}
			visited.put(i, 1);
			if (visited.containsKey(i - 1)) {
				max = Math.max(merge(visited, i - 1, i), max);
			}
			if (visited.containsKey(i + 1)) {
				max = Math.max(merge(visited, i, i + 1), max);
			}
		}

		return max;
	}
	
	

	private static int merge(HashMap<Integer, Integer> visited, int left, int right) {
		// TODO Auto-generated method stub
		return 0;
	}



	public static void main(String[] args) {
		int[] num = { 1, 2, 0, 1 };
		System.out.println(longestConsecutive(num));
	}
}
