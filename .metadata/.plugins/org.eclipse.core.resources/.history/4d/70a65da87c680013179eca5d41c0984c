package surroundedRegions;

import java.util.LinkedList;
import java.util.Queue;

public class BFS {
	public static void solve(char[][] board) {
		if (board == null) {
			return;
		}
		int row = board.length;
		if (row == 0) {
			return;
		}
		int column = board[0].length;
		if (row == 0 && column == 0) {
			return;
		}
		Queue<Integer> r = new LinkedList<Integer>();
		Queue<Integer> c = new LinkedList<Integer>();
		for (int i = 0; i < column; i++) {
			if (board[0][i] == 'O') {
				board[0][i] = 'Y';
				r.add(0);
				c.add(i);
			}
			if (board[row - 1][i] == 'O') {
				board[row - 1][i] = 'Y';
				r.add(row - 1);
				c.add(i);
			}
		}

		for (int i = 0; i < row; i++) {
			if (board[i][0] == 'O') {
				board[i][0] = 'Y';
				r.add(i);
				c.add(0);
			}
			if (board[i][column - 1] == 'O') {
				board[i][column - 1] = 'Y';
				r.add(i);
				c.add(column - 1);
			}
		}
		
		while (!r.isEmpty()) {
			
		}
	}
}
