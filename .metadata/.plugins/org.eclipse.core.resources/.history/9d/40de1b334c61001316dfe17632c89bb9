package distinctSubsequences;

import java.util.ArrayList;

public class DistinctSubsequences {
	public static int numDistinct(String S, String T) {
		S = S.toLowerCase();
		T = T.toLowerCase();
		if (S.length() < T.length()) {
			return 0;
		}

		if (T.length() == 0 && S.length() != 0) {
			return 1;
		}

		if (T.length() == 0 && S.length() == 0) {
			return 1;
		}

		ArrayList<Character> s = new ArrayList<Character>();
		ArrayList<Integer> ns = new ArrayList<Integer>();
		ArrayList<Character> t = new ArrayList<Character>();
		ArrayList<Integer> nt = new ArrayList<Integer>();
		shrink(s, ns, S);
		shrink(t, nt, T);

//		ns = delete(t, nt, s, ns);
//		if (ns == null) {
//			return 0;
//		}
//		int result = 1;
//		for (int i = 0; i < t.size(); i++) {
//			int countS = ns.get(i);
//			int countT = nt.get(i);
//			if (countS != countT) {
//				result *= combination(countS, countT);
//			}
//		}
		ArrayList<Integer> count = new ArrayList<Integer>();
		int result = 0;
		boolean isSubstring = false;
		int pt = 0;
		for  (int ps = 0; ps < s.size(); ps++) {
			if (s.get(ps) == t.get(pt)) {
				count.add(ns.get(ps));
				pt++;
				if (pt == t.size()) {
					isSubstring = true;
				}
			}
		}
		

		return result;
	}

//	private static ArrayList<Integer> delete(ArrayList<Character> t,
//			ArrayList<Integer> nt, ArrayList<Character> s, ArrayList<Integer> ns) {
//		ArrayList<Integer> newS = new ArrayList<Integer>();
//		int pt = 0;
//		for (int ps = 0; ps < s.size(); ps++) {
//			if (s.get(ps) == t.get(pt)) {
//				if (ns.get(ps) < nt.get(pt)) {
//					return null;
//				}
//				pt++;
//				newS.add(ns.get(ps));
//			}
//		}
//		if (pt != t.size()) {
//			return null;
//		} else {
//			return newS;
//		}
//
