package validPalindrome;

public class ValidPalindrome {
	public boolean isPalindrome(String s) {
		if (s == null) {
			return false;
		} 
		if (s.isEmpty()) {
			return true;
		}
		
		s = s.replaceAll("[^a-zA-Z]", "").toLowerCase();
		int l =0;
		int h = s.length() - 1;
		while (l < h) {
			if (s.charAt(l) != s.charAt(h)) {
				return false;
			} else {
				l++;
				h--;
			}
		}
		
		return true;
	}
	
	public static void main(String[] args) {
		
	}
}
