package power;

public class Power {
	public static double pow(double x, int n) {
		System.out.println(Math.pow(x, n));
		if (n == 0) {
			return 1.0;
		}
		boolean isPositive = n > 0;
		n = Math.abs(n);
		double result = x;
		int i = n /2;
		while (i != 1 && i != 0) {
			result = result * result;
			i /= 2;
		}
		if (i == 1) {
			result *= x;
		}
		
		if (!isPositive) {
			result = 1.0 / result;
		}
		System.out.println(result);
		
		return result;
	}

	public static void main(String[] args) {
		System.out.println(pow(0, 0) == Math.pow(0, 0));
		System.out.println(pow(2, 5) == Math.pow(2, 5));
		System.out.println(pow(2, -5) == Math.pow(2, -5));
		System.out.println(pow(2, 10) == Math.pow(2, 10));
		System.out.println(pow(2, 1000) == Math.pow(2, 1000));
		System.out.println(pow(0.00001, 2147483647) == Math.pow(0.00001,
				2147483647));
	}
}
