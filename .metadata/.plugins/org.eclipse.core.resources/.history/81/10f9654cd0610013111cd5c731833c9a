package recursion;

public class RobotMovingDownwards {
	public static int move(int x, int y) {
		if (x == 0 && y == 0) {
			return 1;
		} else if (x > 0 && y == 0) {
			return move(x - 1, y);
		} else if (x == 0 && y > 0) {
			return move(x, y - 1);
		} else {
			return move(x - 1, y) + move(x, y - 1);
		}
	}

	public static void main(String[] args) {

	}
}
