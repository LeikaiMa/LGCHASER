package maximumSubarray;

public class CheckSumLessThanZero {
    public int maxSubArray(int[] A) {
        int sum = 0;
        int max = Integer.MIN_VALUE;
        
        for(int i : A) {
            sum += i;
            if (max < sum) {
                max = sum;
            }
            
            if (sum < 0) {
                sum = 0;
            }
        }
        
        return max;
    }
}
