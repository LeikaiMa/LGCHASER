package recursion;

public class Stairs {
//	
	public static int stairs (int n) {
		if (n == 0) {
			return 1;
		} else if (n < 0) {
			return 0;
		} else {
			return stairs(n - 1) + stairs(n - 2) + stairs(n -3);
		}
	}
	public static void main(String[] args) {
		System.out.println(stairs(4));
	}

}
