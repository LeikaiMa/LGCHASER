package rotateList;

public class ConcatHeadTail {
    public ListNode rotateRight(ListNode head, int n) {
        if (n == 0 || head == null || head.next == null) {
            return head;
        }
        
        ListNode cur = head;
        
        int total = 1;
        
        while (cur.next != null) {
            total++;
            cur = cur.next;
        }
        
        n = n % total;
        
        cur.next = head;
        
        cur = head;
        for (int i = 1; i < total - n; i++) {
            cur = cur.next;
        }
        head = cur.next;
        cur.next = null;
        return head;
    }
}
