	}

	public static void main(String[] args) {
		int[] S = new int[3];
		S[0] = 1;
		S[1] = 2;
		S[2] = 3;
		System.out.println(Arrays.toString(S));
		ArrayList<ArrayList<Integer>> result = subsets(S);
		for (ArrayList<Integer> arrayList : result) {
			System.out.println(arrayList);
		}
	}
