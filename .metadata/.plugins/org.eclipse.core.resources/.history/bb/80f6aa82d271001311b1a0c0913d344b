package validNumber;

public class SetConstraints {
	public static boolean isNumber(String s) {
		if (s == null) {
			return false;
		}

		s = s.trim().toLowerCase();
		if (s.length() == 0) {
			return false;
		}
		boolean hasE = false;
		boolean hasDot = false;
		if ((s.charAt(0) < '0' || s.charAt(0) > '9') && s.charAt(0) != '-') {
			if (s.charAt(0) == '.') {
				hasDot =true;
			} else {
				return false;
			}
		}

		
		for (int i = 1; i < s.length(); i++) {
			char c = s.charAt(i);
			if (Character.isDigit(c)) {
				continue;
			} else if (c == 'e') {
				if (!hasE && i< s.length() -1 && Character.isDigit(s.charAt(i+1))){
					hasE = true;
				} else {
					return false;
				}
			} else if (c == '.'){
				if (!hasDot){
					hasDot = true;
				} else {
					return false;
				}
			}else {
				return false;
			}
		}
		return true;
	}

	public static void main(String[] args) {
		System.out.println(isNumber("0") == true);
		System.out.println(isNumber("-0") == true);
		System.out.println(isNumber(" 0.1 ") == true);
		System.out.println(isNumber("abc") == false);
		System.out.println(isNumber("1 a") == false);
		System.out.println(isNumber("2e10") == true);
		System.out.println(isNumber(".1") == true);
		System.out.println(isNumber("3.") == true);
	}
}
