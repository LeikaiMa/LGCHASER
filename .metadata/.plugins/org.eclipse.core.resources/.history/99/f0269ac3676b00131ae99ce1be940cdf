package romanToInteger;

import java.util.HashMap;

public class UseHashMap {
	public int romanToInt(String s) {
		if (s == null || s.isEmpty()) {
			return 0;
		}
		int i = 0;
		int result = 0;
		HashMap<String, Integer> rToI = new HashMap<String, Integer>();

		rToI.put("M", 1000);
		rToI.put("CM", 900);
		rToI.put("D", 500);
		rToI.put("CD", 400);
		rToI.put("C", 100);
		rToI.put("XC", 90);
		rToI.put("L", 50);
		rToI.put("XL", 40);
		rToI.put("X", 10);
		rToI.put("IX", 9);
		rToI.put("V", 5);
		rToI.put("IV", 5);
		rToI.put("I", 1);

		while (i < s.length() - 1) {
			String num = "";
			num = num + s.charAt(i) + s.charAt(i + 1);
			if (rToI.containsKey(num)) {
				result += rToI.get(num);
				i += 2;
			} else {
				num = "" + s.charAt(i);
				result += rToI.get(num);
				i++;
			}
		}
		if (i == s.length() - 1) {
			result += rToI.get(String.valueOf(s.charAt(i)));
		}
		return result;

	}
}
