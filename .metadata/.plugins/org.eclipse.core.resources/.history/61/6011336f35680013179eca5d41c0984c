package atoi;

public class AToI {
	public static int atoi(String str) {
		if (str == null) {
			return 0;
		}
		str = str.trim();
		if (str.isEmpty()) {
			return 0;
		}
		boolean positive = false;
		int pos = 0;
		int result = 0;
		int factor = 10;
		if (str.charAt(pos) == '+') {
			positive = true;
		} else if (str.charAt(pos) == '-') {
			positive = false;
		} else if (str.charAt(pos) >= '0' && str.charAt(pos) <= '9') {
			positive = true;
			result = str.charAt(pos) - '0';
		} else {
			return 0;
		}
		pos++;
		while (pos < str.length() && str.charAt(pos) >= '0'
				&& str.charAt(pos) <= '9') {
			result = result * factor + (str.charAt(pos) - '0');
			if (positive && result < 0) {
				return Integer.MAX_VALUE;
			} else if (!positive && (result * (-1)) > 0) {
				return Integer.MIN_VALUE;
			}
			pos++;
		}
		if (positive) {
			return result;
		} else {
			return -result;
		}
	}

	public static void main(String[] args) {
		String s1 = "    -00134";
		System.out.println(atoi(s1) == -134);
		String s2 = "    10522545459";
		System.out.println(atoi(s2) == Integer.MAX_VALUE);
	}
}
