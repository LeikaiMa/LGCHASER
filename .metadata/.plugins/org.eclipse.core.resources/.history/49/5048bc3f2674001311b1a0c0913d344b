package anagrams;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;

public class SortStringSelfHashMap {
	public static ArrayList<String> anagrams(String[] strs) {
		ArrayList<String> results = new ArrayList<String>();
		if (strs == null || strs.length == 0 || strs.length == 1) {
			return results;
		}
		
		HashMap<String, ArrayList<Integer>> anagrams = new HashMap<String,ArrayList<Integer>>();
		
		for (int i = 0; i < strs.length; i++) {
			char[] word = strs[i].toCharArray();
			Arrays.sort(word);
			String newWord = new String(word);
			if (anagrams.containsKey(newWord)) {
				anagrams.get(newWord).add(i);
			}
		}
	}
}
