package removeDuplicatesFromSortedArrayI;

public class SlowCopyFast {
	public int removeDuplicates(int[] A) {
		if (A == null || A.length == 0) {
			return 0;
		}

		if (A.length == 1) {
			return 1;
		}

		int slow = 0;
		int fast = 1;

		while (true) {
			while (fast < A.length && A[fast] == A[slow]) {
				fast++;
			}

			if (fast < A.length) {
				A[++slow] = A[fast];
			} else {
				return slow + 1;
			}
		}
	}
}
