package climbStairs;

import java.util.HashMap;

public class Recursive {
	public int climbStairs(int n) {
		if (n == 0 || n == 1 || n == 2) {
			return n;
		}

		int[] ways = new int[1];
		HashMap<Integer, Integer> map = new HashMap<Integer, Integer>();
		int result =  climbStairsHelper(n);
		return result;
	}

	private int climbStairsHelper(int n) {
		if (n < 0) {
			return 0;
		} else if (n == 0) {
			ways[0] += 1;
		} else {
			climbStairsHelper(n - 1, ways);
			climbStairsHelper(n - 2, ways);
		}

	}

}
