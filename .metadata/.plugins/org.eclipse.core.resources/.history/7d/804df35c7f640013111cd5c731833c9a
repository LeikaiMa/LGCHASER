package sudoku;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashSet;

public class Sudoku {
	public static boolean isValidSudoku(char[][] board) {
		int r = 0;
		int c = 3;
		HashSet<Character> candidates = new ArrayList<>();
		candidates = getCandidates(board, r, c);
		return false;
	}

	public static HashSet<Character> getCandidates(char[][] board, int row,
			int column) {
		HashSet<Character> candidates = new HashSet<>();
		for (char c = '1'; c <= '9'; c++) {
			candidates.add(c);
		}
		for (int i = 0; i < board[0].length; i++) {
			if (candidates.contains(board[row][i])) {
				candidates.remove(board[row][i]);
			}
		}
		for (int i = 0; i < board.length; i++) {
			if (candidates.contains(board[i][column])) {
				candidates.remove(board[i][column]);
			}
		}
		
		
	}

	public static void main(String[] args) {
		char[][] board = new char[9][9];
		String[] lines = new String[9];
		lines[0] = "53..7....";
		lines[1] = "6..195...";
		lines[2] = ".98....6.";
		lines[3] = "8...6...3";
		lines[4] = "4..8.3..1";
		lines[5] = "7...2...6";
		lines[6] = ".6....28.";
		lines[7] = "...419..5";
		lines[8] = "....8..79";
		for (int i = 0; i < 9; i++) {
			board[i] = lines[i].toCharArray();
		}
		for (int i = 0; i < 9; i++) {
			System.out.println(Arrays.toString(board[i]));
		}
		isValidSudoku(board);
	}
}
