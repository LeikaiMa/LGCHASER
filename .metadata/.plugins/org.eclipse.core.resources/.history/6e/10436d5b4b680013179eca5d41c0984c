package spiralMatrixII;

public class SpiralMatrix {
	public int[][] generateMatrix(int n) {
		if (n == 0) {
			return null;
		}
		int count = 1;
		for (int layer = 0; layer <= n / 2; layer++) {
			int first = layer;
			int last = n - 1 - layer;
			for (int i = first; i < last; i++) {
				int offset = i - first;
				matrix[i][first] = count;
				
			}
			count += (last - first) * 4; 
		}
	}
}
