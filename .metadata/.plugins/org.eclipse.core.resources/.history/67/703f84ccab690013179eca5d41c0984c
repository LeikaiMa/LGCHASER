package addTwoNumbers;

public class Reverse {
	public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
		if (l1 == null && l2 == null) {
			return null;
		}
		
		if (l1 ==null) {
			return l2;
		} 
		if (l2 == null) {
			return l1;
		}
		
		int carry = 0; 
		ListNode head = new ListNode(carry);
		
		while (l1 != null || l2 != null) {
			int sum = 0;
			if (l1 == null) {
				sum = l2.val + carry;
			}
			if (l2 == null) {
				sum = l1.val + carry;
			}
		}
	}
}
