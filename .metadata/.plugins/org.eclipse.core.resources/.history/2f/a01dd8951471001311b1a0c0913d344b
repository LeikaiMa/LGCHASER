package firstMissingPositive;

public class UseArrayIndex {
	public static int firstMissingPositive(int[] A) {
		if (A == null || A.length == 0) {
			return 0;
		}
		int n = A.length;
		for (int i = 0; i < n; i++) {
			if (A[i] != i + 1 && A[i] > 0 && A[i] <= n) {
				int tmp = A[i];
				A[i] = A[tmp - 1];
				A[tmp - 1] = tmp;
				i--;
			}
		}

		for (int i = 0; i < n; i++) {
			if (A[i] != i + 1) {
				return i + 1;
			}
		}
		return 0;
	}
	
	public static void main(String[] args){
		int[] A = {1,2,0};
	}
}
