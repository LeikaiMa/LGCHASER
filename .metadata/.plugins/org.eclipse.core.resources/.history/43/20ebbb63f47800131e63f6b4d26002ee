package decodeWays;

public class CheckRestriction {
	public int numDecodings(String s) {
		if (s == null || s.isEmpty()) {
			return 0;
		}

		int len = s.length();
		int[] dp = new int[len];

		if (s.charAt(0) != '0') {
			dp[0] = 1;
		}

		if (len == 1) {
			return dp[0];
		}

		if (s.charAt(1) != '0') {
			dp[1] += dp[0];
		}

		int sum = (s.charAt(0) - '0') * 10 + (s.charAt(1) - '0');
		if (sum >= 10 && sum <= 26) {
			dp[1] += 1;
		}

		for (int i = 2; i < len; i++) {
			if (s.charAt(i) != '0') {
				dp[i] += dp[i - 1];
			}
			sum = (s.charAt(i - 1) - '0') * 10 + (s.charAt(i) - '0');
			if (sum >= 10 && sum <= 26) {
				dp[i] += dp[i - 2];
			}
		}

		return dp[len - 1];
	}
}
