package countAndSay;

public class Loop {
	public static String countAndSay(int n) {
		if (n <=0 ) {
			return null;
		}
		String s = "1";
		
		for (int i = 1 ; i < n; i++) {
			StringBuffer sb = new StringBuffer();
			char c = s.charAt(0);
			int count = 1;
			for (int j = 1; j < s.length(); j++) {
				if (s.charAt(j) == c) {
					count++;
				} else {
					sb.append(count);
					sb.append(c);
					c = s.charAt(j);
					count = 1;
				}
			}
			
			sb.append(count);
			sb.append(c);
			s = sb.toString();
		}
		return s;
	}
	
	public static void main(String[] args) {
		for (int i = 1; i < 5 ; i++) {
			System.out.println(countAndSay(i));
		}
	}
}
